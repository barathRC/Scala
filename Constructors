object OOBasicsConstructors extends App{

  class Person (name: String, age: Int)  {
    val x = 2
    println(1 + 5)

    // Auxilary constructors
    def this(name: String) = this(name, 0)

    def this() = this("pavan", 0)

    def greeting(name: String) ={
      println(s"${this.name} says: Hi, $name")
    }
  }

  val myobj = new Person("pavan", 36)
  println(myobj.x)
  println(myobj.greeting("prasanna"))

  val myobj1 = new Person("Bharath")
  println(myobj1.greeting("xyz"))

  val myobj2 = new Person()
  println(myobj2.greeting("x"))



}
